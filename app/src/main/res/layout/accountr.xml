<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff"
    >
  
 <RelativeLayout 
   android:id="@+id/head"  
   android:layout_width="match_parent"
   android:layout_height="@dimen/j45dp"    
   android:background="@drawable/background_login"
   android:gravity="center"
     >
     <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用戶名" 
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"
        />
     <TextView
        android:id="@+id/exit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出" 
        android:textSize="12sp"
        android:layout_alignBaseline="@id/userName"
        android:textColor="#fff"
        android:layout_marginRight="7sp"
        android:drawableLeft="@drawable/p_login_back"
         android:gravity="center"
         android:layout_marginLeft="@dimen/j5dp"
        />
 </RelativeLayout> 
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_below="@id/head"
     android:layout_marginTop="@dimen/j51_1dp"  
     >
     
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#C9C9C9"
        /> 
      <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="@dimen/j80_5dp"
     android:layout_marginTop="@dimen/j10dp"
     android:layout_marginBottom="@dimen/j10dp"
          >
     <LinearLayout
     android:id="@+id/personinfo_linear"     
     android:layout_width="match_parent"
     android:layout_height="match_parent"  
     android:orientation="horizontal"
     android:gravity="center_vertical"
         >
      <ImageView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/personinfo_img"
     android:layout_marginLeft="@dimen/j8_5dp"  
          /> 
     <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical" 
     android:layout_marginLeft="@dimen/j15dp"
         >
      <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:text="个人信息"
     android:layout_weight="1" 
          /> 
      <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:text="用户名:莉莉"
     android:textColor="#C9C9C9"
     android:layout_weight="1" 
          />          
     </LinearLayout>     
     
          
     </LinearLayout>  
       <ImageView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/arrow"
     android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
     />
     </RelativeLayout> 
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#C9C9C9"
      
        />   
   <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#C9C9C9"
      android:layout_marginTop="@dimen/j20dp"
        />
   <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="@dimen/j80_5dp" 
     android:layout_marginTop="@dimen/j10dp" 
     android:layout_marginBottom="@dimen/j10dp"     
       >
       
  
   <LinearLayout
     android:id="@+id/payment_linear" 
     android:layout_width="match_parent"
     android:layout_height="match_parent"  
     android:orientation="horizontal"
     android:gravity="center_vertical"
         >
      <ImageView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/payment_img"
     android:layout_marginLeft="@dimen/j8_5dp"  
          /> 
     <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginLeft="@dimen/j15dp"
         >
      <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:text="转账"
     android:layout_weight="1" 
          /> 
      <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:text="转账管理"
     android:textColor="#C9C9C9"
     android:layout_weight="1" 
          />          
     </LinearLayout>     
     
     </LinearLayout>  
      <ImageView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/arrow"
     android:layout_alignParentRight="true"
     android:layout_centerVertical="true"
     />   
      </RelativeLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#C9C9C9"
        />       
 </LinearLayout> 
 <TextView
   android:id="@+id/lookhistory" 
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="查看验证历史" 
   android:textColor="#65D0FC" 
   android:layout_alignParentBottom="true"
   android:layout_marginBottom="@dimen/j20dp"
   android:layout_centerHorizontal="true"
     /> 
</RelativeLayout>
