<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/j45dp"
            android:background="@drawable/background_login"
            android:gravity="center"
            android:text="登陆"
            android:textSize="20sp"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j10dp"
            android:text="密码错误"
            android:textColor="#D52B2B"
            android:textSize="19sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal" >

            <com.com.xiaoi.view.MyAutoCompleteTextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/username_img"
                android:drawableRight="@drawable/clear_icon_normal"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="#000"
                android:hint="用户名" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
            android:layout_marginTop="10dp"
            android:background="#C9C9C9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
             >

            <LinearLayout
                android:id="@+id/passwword_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <com.com.xiaoi.view.MyAutoCompleteTextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:drawableLeft="@drawable/password_img"
                    android:drawableRight="@drawable/clear_icon_normal"
                    android:hint="请输入密码"
                    android:textColor="#000"
                    android:inputType="textPassword" />

               
            </LinearLayout>
             <ImageView
                    android:layout_width="@dimen/j20dp"
                    android:layout_height="@dimen/j20dp"
                    android:src="@drawable/showpassword_img" 
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/passwword_linearlayout"
                    android:visibility="gone"
                    />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
            android:layout_marginTop="@dimen/j10dp"
            android:background="#C9C9C9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/j8_5dp"
            android:layout_marginTop="14sp"
            android:text="忘记密码"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/loginbnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
            android:layout_marginTop="@dimen/j26_2dp"
            android:background="@drawable/background_loginbutton"
            android:text="确认登陆"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/registertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j20dp"
            android:text="注册新用户"
            android:textColor="#65D0FC"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试验"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>