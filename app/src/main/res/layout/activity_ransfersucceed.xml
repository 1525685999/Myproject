<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j45dp"
        android:background="@drawable/background_login"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="转账成功"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#fff"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/userName"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/p_login_back"
                android:layout_marginLeft="@dimen/j10dp"
                />
            <TextView
                android:id="@+id/esc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textSize="12sp"
                android:textColor="#fff"
                android:background="#00000000"
                android:layout_marginLeft="@dimen/j5dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head"
        android:layout_marginTop="@dimen/j20dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/card"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/j40dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
            android:background="@drawable/background_text"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/j18_2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从信用卡转到：李莉莉"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/j10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/j40dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/j13_8dp"
            android:layout_marginRight="@dimen/j13_8dp"
            android:background="@drawable/background_text"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/j10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额:1200"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/j13_8dp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/shurebnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/j13_8dp"
        android:layout_marginRight="@dimen/j13_8dp"
        android:background="@drawable/background_loginbutton"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="19sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/j8_5dp"
        />
</RelativeLayout>
