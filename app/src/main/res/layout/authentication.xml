<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
   <RelativeLayout 
   android:id="@+id/head"  
   android:layout_width="match_parent"
   android:layout_height="@dimen/j45dp"    
   android:background="@drawable/background_login"
   android:gravity="center"
     >
     <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="声纹验证" 
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"
        />
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignBottom="@id/userName"
         >

     <TextView
        android:id="@+id/esc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出" 
        android:textSize="12sp"
        android:textColor="#fff"
        android:background="#00000000"
        android:layout_marginLeft="@dimen/j5dp"
         android:drawableLeft="@drawable/p_login_back"
         android:gravity="center"
        />
 
  </LinearLayout>
 </RelativeLayout>  
<LinearLayout 
 android:layout_width="match_parent"
 android:layout_height="wrap_content" 
 android:layout_below="@id/head"
 android:layout_marginTop="@dimen/j26_2dp"  
 android:orientation="vertical"
    >
  <TextView 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="请按下话筒标示，并对着话筒说出下方显示的语句："  
 android:drawableLeft="@drawable/caution"  
 android:gravity="center"
 android:textSize="10sp" 
        /> 
  <LinearLayout 
 android:layout_width="match_parent"
 android:layout_height="@dimen/j40dp"  
 android:orientation="vertical"
 android:layout_marginLeft="@dimen/j13_8dp"
 android:layout_marginRight="@dimen/j13_8dp" 
 android:background="@drawable/background_text" 
 android:gravity="center_vertical"
 android:layout_marginTop="@dimen/j18_2dp"
     >
    <TextView 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content" 
 android:text="在小i,我的声音就是我的密码"
 android:textSize="16sp"
 android:layout_marginLeft="@dimen/j10dp"
        />
    </LinearLayout> 
 </LinearLayout>
 <ImageView
 android:id="@+id/microphone"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content" 
 android:src="@drawable/microphone_img"
 android:layout_alignParentBottom="true"
 android:layout_centerInParent="true"
 android:layout_marginBottom="@dimen/j54_2dp"
 android:clickable="true"
     />
</RelativeLayout>
